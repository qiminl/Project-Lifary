<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.liuqimin.lifary.SignUp"
    android:orientation="vertical"
    android:background="#ffffff"
    android:weightSum="1"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/statusLinearLayout"
        android:outlineProvider="bounds">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight = "1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text = "@string/signUp"
            android:id="@+id/signUpTitleTextView"
            android:gravity="center"
            android:outlineProvider="bounds"
            android:elegantTextHeight="false"
            android:textColor="@color/actionbar_background"
            android:textSize="22dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:id ="@+id/loginPageButton"
            android:text = "@string/login"
            android:outlineProvider="bounds"
            android:textColor="@color/dark_color"
            android:fontFamily="sans-serif-light"
            android:textSize="22dp"
            />
    </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Username: "
            android:id="@+id/usernameTextView"
            android:layout_marginTop="12dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/usernameEdittext"
            android:layout_weight="0.03"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Password:"
            android:id="@+id/passwordTextView"
            android:layout_marginTop="12dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordEditText"
            android:layout_weight="0.05"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Confirm Password:"
            android:id="@+id/passwordConfirmedTextView"
            android:layout_marginTop="12dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordConfirmedEditText"
            android:layout_weight="0.05"
            android:textSize="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@string/signUp"
            android:id="@+id/signUpButton"
            android:layout_marginTop="30dp"
            />




</LinearLayout>
